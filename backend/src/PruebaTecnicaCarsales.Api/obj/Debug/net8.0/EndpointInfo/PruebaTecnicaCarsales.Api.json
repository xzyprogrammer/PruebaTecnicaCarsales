{
  "openapi": "3.0.1",
  "info": {
    "title": "PruebaTecnicaCarsales.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Episodes": {
      "get": {
        "tags": [
          "Episodes"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "name",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PagedEpisodesDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedEpisodesDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedEpisodesDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Episodes/{id}": {
      "get": {
        "tags": [
          "Episodes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/EpisodeDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EpisodeDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/EpisodeDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EpisodeDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "airDate": {
            "type": "string",
            "nullable": true
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "charactersCount": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PagedEpisodesDto": {
        "type": "object",
        "properties": {
          "currentPage": {
            "type": "integer",
            "format": "int32"
          },
          "totalPages": {
            "type": "integer",
            "format": "int32"
          },
          "totalCount": {
            "type": "integer",
            "format": "int32"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EpisodeDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}